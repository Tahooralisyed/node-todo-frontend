//Jenkins file only to tutorial example
//sh 'npm build --prod'
pipeline {
  agent any
    
  tools {nodejs "node"}
    
  stages {
        
    stage('Cloning Git') {
      steps {
        git 'https://github.com/Tahooralisyed/node-todo-frontend.git'
      }
    }
        
    stage('Install dependencies') {
      steps {
        sh 'npm install'
      }
    }
    stage('Build') {
      steps {
         sh '${env.BUILD_ID} npm run build:prod'
         
      }
    }  
     
    stage('Test') {
      steps {
         sh 'npm test'
      }
    }      
  }
}
